{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "object-curly-spacing": ["error", "always"],
    "no-var": 2,
    "no-unused-vars": 2,
    "prefer-const": 2,
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": ["error", "always"],
    "semi": ["error", "never"],
    "quotes": ["error", "single"]
  }
}
